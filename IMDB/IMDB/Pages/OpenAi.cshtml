@page
@model WebApplication2.Pages.OpenAi

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title></title>
</head>
<body>
<div>
    <form method="post">
        <label for="input">Enter your SQL query:</label>
        <input type="text" id="input" name="input" />
        <button type="submit">Translate</button>
    </form>
    
    @if (!string.IsNullOrEmpty(Model.TranslatedQuery))
    {
        <p>The translated query is: @Model.TranslatedQuery</p>
    }
</div>
</body>
</html>