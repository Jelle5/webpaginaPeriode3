@page
@using WebApplication2.Pages.Database.model
@using WebApplication2.Pages.Database.repository
@model WebApplication2.Pages.DashBoard

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <!--<link rel="stylesheet" href="/css/dash.css">-->
    <!--  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    <title>Dashboard</title>
</head>
<body>

<div>
    <table class="table table-hover">
        <thead>
        <tr>
            <th>Primary</th>
            <th>Type</th>
            <th>is adult</th>
            <th>start year</th>
            <th>end year</th>
            <th>num minutes</th>
            <th>average rating</th>
            <th>number of votes</th>
            <th>season number</th>
            <th>episode number</th>
            <th>
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
                    filters
                </button>
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var title in Model.titles)
        {
            <tr>
                <td>
                    <a href="/TitleInfo?tconst=@title.tconst">@title.primary</a>
                </td>
                <td>@title.type</td>
                <td>@title.isadult</td>
                <td>@title.startyear</td>
                <td>@title.endyear</td>
                <td>@title.runtimemin</td>
                <td>@title.averagerating</td>
                <td>@title.numvotes</td>
                <td>@title.seasonnr</td>
                <td>@title.episodenr</td>

            </tr>
        }
        </tbody>
    </table>
</div>

<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Filters</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div>
                    <label>Type</label>
                    <select name="type" id="type">
                        <option value="volvo">film</option>
                        <option value="saab">game</option>
                        <option value="saab">docu</option>
                        <option value="saab">otto</option>
                        <option value="saab">jan</option>
                        <option value="saab">foeke</option>
                    </select>
                </div>
                <div>
                    <label>Ook 18+ films laten zien?</label>
                    <select name="isAdult" id="isAdult">
                        <option value="true">true</option>
                        <option value="false">false</option>
                    </select>
                </div>

                <div>
                    <label>Start year</label>
                    <select name="=1" id="=1">
                        <option value="volvo">=</option>
                        <option value="saab">></option>
                        <option value="saab"><</option>
                    </select>
                    <input placeholder="start year" style="width: 100px"/>
                </div>

                <div>
                    <label>end year</label>
                    <select name="=2" id="=2">
                        <option value="volvo">=</option>
                        <option value="saab">></option>
                        <option value="saab"><</option>
                    </select>
                    <input placeholder="end year" style="width: 100px"/>
                </div>

                <div>
                    <label>num minutes</label>
                    <select name="=3" id="=3">
                        <option value="volvo">=</option>
                        <option value="saab">></option>
                        <option value="saab"><</option>
                    </select>
                    <input placeholder="num minutes" style="width: 100px"/>
                </div>

                <div>
                    <label>average rating</label>
                    <select name="=4" id="=4">
                        <option value="volvo">=</option>
                        <option value="saab">></option>
                        <option value="saab"><</option>
                    </select>
                    <input placeholder="avg rating" style="width: 100px"/>
                </div>

                <div>
                    <label>number of votes</label>
                    <select name="=5" id="=5">
                        <option value="volvo">=</option>
                        <option value="saab">></option>
                        <option value="saab"><</option>
                    </select>
                    <input placeholder="num votes" style="width: 100px"/>
                </div>

                <div>
                    <label>season number</label>
                    <input placeholder="season number" style="width: 100px"/>
                </div>

                <div>
                    <label>episode number</label>
                    <input placeholder="episode number" style="width: 100px"/>
                </div>

            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>


</body>
</html>